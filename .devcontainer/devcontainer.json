{
    "name": "Swift Development Container",
    "dockerFile": "Dockerfile",
    "context": "..",
    "appPort": [
        8080
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "sswg.swift-lang"
            ],
            "settings": {
                "#swift.sourcekit-lsp.serverPath#": "/usr/bin/sourcekit-lsp"
            }
        }
    },
    "postCreateCommand": "swift build",
    "remoteUser": "root"
}